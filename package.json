{
  "name": "playwright-test-automation-framework",
  "version": "1.0.0",
  "description": "Scalable Playwright Test Automation Framework with TypeScript, Page Object Model, CI/CD integration, and advanced reporting",
  "main": "index.js",
  "scripts": {
    "install-playwright": "playwright install",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:api": "playwright test --project=api",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:regression": "playwright test --grep=\"@regression\"",
    "test:critical": "playwright test --grep=\"@critical\"",
    "test:auth": "playwright test --grep=\"@auth\"",
    "test:performance": "playwright test --grep=\"@performance\"",
    "test:security": "playwright test --grep=\"@security\"",
    "test:accessibility": "playwright test --grep=\"@accessibility\"",
    "test:flaky": "playwright test --grep=\"@flaky\"",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:ci": "playwright test --reporter=html,allure-playwright,./src/utils/ReportGenerator.ts",
    "test:nightly": "playwright test --grep=\"@regression|@performance|@security\"",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "report": "playwright show-report",
    "report:allure": "allure serve allure-results",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "test:web": "playwright test",
    "test:api:python": "pytest tests/api/",
    "test:mobile:python": "pytest tests/mobile/",
    "test:security:python": "python scripts/security_scan.py",
    "test:all": "npm run test && npm run test:api:python && npm run test:mobile:python",
    "generate-report": "python scripts/generate_report.py",
    "setup": "npm install && pip install -r requirements.txt && playwright install",
    "setup:docker": "docker-compose up -d",
    "setup:full": "npm run setup && npm run setup:docker",
    "build": "tsc",
    "build:docker": "docker build -t playwright-tests .",
    "clean": "rimraf dist test-results reports playwright-report allure-results allure-report",
    "clean:docker": "docker-compose down -v && docker system prune -f",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "pretest": "npm run type-check",
    "notify:test": "node -e \"require('./dist/utils/NotificationService.js').NotificationService.getInstance().testNotifications()\"",
    "tags:stats": "node -e \"console.log(require('./dist/utils/TagManager.js').TagManager.getInstance().getTagStatistics())\"",
    "docker:test": "docker run --rm -v $(pwd):/app playwright-tests npm run test:ci",
    "docker:smoke": "docker run --rm -v $(pwd):/app playwright-tests npm run test:smoke",
    "docker:regression": "docker run --rm -v $(pwd):/app playwright-tests npm run test:regression"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "nodemailer": "^6.9.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "rimraf": "^5.0.5",
    "allure-playwright": "^2.10.0",
    "allure-commandline": "^2.25.0"
  },
  "keywords": [
    "testing",
    "automation",
    "playwright",
    "typescript",
    "page-object-model",
    "ci-cd",
    "cross-browser",
    "parallel-testing",
    "test-framework",
    "docker",
    "notifications",
    "reporting",
    "tagging",
    "allure"
  ],
  "author": "Software Testing AI Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/playwright-test-automation-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/playwright-test-automation-framework/issues"
  },
  "homepage": "https://github.com/your-org/playwright-test-automation-framework#readme"
}